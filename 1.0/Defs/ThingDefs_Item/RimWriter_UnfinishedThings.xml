<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="UnfinishedWriting" Abstract="True">
    <thingClass>UnfinishedThing</thingClass>
    <category>Item</category>	
    <altitudeLayer>Item</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <isUnfinishedThing>true</isUnfinishedThing>
    <selectable>true</selectable>
    <tradeability>None</tradeability>
    <drawerType>RealtimeOnly</drawerType>
    <!-- For CompForbiddable -->
    <statBases>
	  <Mass>0.05</Mass>
      <MaxHitPoints>50</MaxHitPoints>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <thingCategories>
      <li>Unfinished</li>
    </thingCategories>
  </ThingDef>

  <ThingDef ParentName="UnfinishedWriting">
    <defName>UnfinishedWriting</defName>	
    <label>unfinished writing</label>
    <graphicData>
      <texPath>Item/Unfinished/Jecrell_Page</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	
  </ThingDef>

  <ThingDef ParentName="UnfinishedWriting">
    <defName>UnfinishedWritingTablet</defName>
    <label>unfinished writing (tablet)</label>
    <statBases>
	  <Mass>5</Mass>
    </statBases>
    <graphicData>
      <texPath>Item/Unfinished/Jecrell_Tablet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  
  <ThingDef ParentName="UnfinishedWriting">
    <defName>UnfinishedWritingScroll</defName>
    <label>unfinished writing (scroll)</label>
    <graphicData>
      <texPath>Item/Unfinished/Jecrell_Scroll</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
  </ThingDef>
  
  
</Defs>